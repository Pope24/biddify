@page
@model Biddify.Pages.Profiles.Partial._SecurityManagementModel

<div class="p-6 max-w-6xl mx-auto">
    <div class="bg-white p-6 rounded-lg shadow mb-6 border border-gray-300">
        <div class="text-center mb-6">
            <h4 class="text-2xl font-semibold uppercase">Change password</h4>
        </div>

        <!-- Email -->
        <div class="mb-6">
            <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
            <div class="flex gap-4">
                <input type="text" id="emailInput" class="w-1/2 border border-gray-300 rounded-md px-4 py-2" placeholder="Enter your email">
                <button onclick="sendOtp()" class="px-6 py-2 rounded-md text-white hover:bg-blue-700" style="background-color:#212429">Send OTP</button>
            </div>
        </div>

        <!-- OTP Input -->
        <div id="otpSection" class="mb-6 hidden">
            <label class="block text-sm font-medium text-gray-700 mb-1">OTP Code</label>
            <input type="text" id="otpInput" class="w-1/2 border border-gray-300 rounded-md px-4 py-2" placeholder="Enter OTP code">
        </div>

        <!-- New Password -->
        <div class="mb-6">
            <label class="block text-sm font-medium text-gray-700 mb-1">New Password</label>
            <input type="password" id="newPassword" class="w-1/2 border border-gray-300 rounded-md px-4 py-2" placeholder="Enter new password">
        </div>

        <!-- Confirm Password -->
        <div class="mb-6">
            <label class="block text-sm font-medium text-gray-700 mb-1">Confirm Password</label>
            <input type="password" id="confirmPassword" class="w-1/2 border border-gray-300 rounded-md px-4 py-2" placeholder="Re-enter new password">
        </div>

        <!-- Save Button -->
        <div class="flex justify-center">
            <button onclick="savePassword()" class="px-6 py-2 rounded-md text-white hover:bg-blue-700" style="background-color:#212429">Save</button>
        </div>
    </div>
</div>

        <script src="~/js/password-change.js"></script>

