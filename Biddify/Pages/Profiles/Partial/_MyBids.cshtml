@{
    Layout = null;

    // Dữ liệu demo giả lập - trong thực tế bạn sẽ truyền từ backend
    var bids = new[]
    {
        new { ProductName = "iPhone 15 Pro Max", BidAmount = "$1200", BidTime = "2025-06-01 14:00" },
        new { ProductName = "Laptop Dell XPS", BidAmount = "$950", BidTime = "2025-05-30 09:30" },
        new { ProductName = "Đồng hồ Rolex", BidAmount = "$5000", BidTime = "2025-05-28 17:45" }
    };
}

<div>
    <h2 class="text-xl font-bold mb-4">Đấu giá của tôi</h2>

    <table class="w-full table-auto border border-gray-300 rounded">
        <thead class="bg-gray-100">
            <tr>
                <th class="px-4 py-2 text-left border">Sản phẩm</th>
                <th class="px-4 py-2 text-left border">Giá đấu</th>
                <th class="px-4 py-2 text-left border">Thời gian</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var bid in bids)
            {
                <tr class="hover:bg-gray-50">
                    <td class="px-4 py-2 border">@bid.ProductName</td>
                    <td class="px-4 py-2 border">@bid.BidAmount</td>
                    <td class="px-4 py-2 border">@bid.BidTime</td>
                </tr>
            }
        </tbody>
    </table>
</div>
