        color: white;
        padding: 40px 0;
        }

        .footer a {
        color: #ccc;
        text-decoration: none;
        }

        .footer a:hover {
        text-decoration: underline;
        }
        .sticky-header {
        position: fixed; 
        top: 0;
        left: 0;
        width: 100%;
        z-index: 1050;
        transition: transform .35s ease-in-out, background-color .25s ease-in-out;
        }


        .sticky-header.header--hidden {
