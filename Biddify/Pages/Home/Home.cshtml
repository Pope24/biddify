<script>
        document.addEventListener("DOMContentLoaded", () => {
        const slides = [
            {
                image: "https://demo-egenslab.b-cdn.net/html/bidgen/preview/assets/images/hero/featured-product1.png",
                title: "Smart Watch Series X",
                description: "Stay connected with style. Track fitness, receive notifications, and more—all from your wrist."
            },
            {
                image: "https://demo-egenslab.b-cdn.net/html/bidgen/preview/assets/images/hero/featured-product2.png",
                title: "GoPro Hero 10",
                description: "Capture your adventure in stunning 5K video. Durable, waterproof, and ready for action."
            }
        ];

        let currentSlide = 0;

        const image = document.getElementById("section_1-image");
        const title = document.getElementById("section_1-title");
        const desc = document.getElementById("section_1-description");
        const textContent = document.getElementById("text-content");
        function updateSlide() {
            const slide = slides[currentSlide];


            textContent.classList.add("fade-out");
            image.classList.add("fade-out");

            setTimeout(() => {

                image.src = slide.image;
                title.textContent = slide.title;
                desc.textContent = slide.description;

                textContent.classList.remove("fade-out");
                image.classList.remove("fade-out");

                textContent.classList.add("fade-in", "slide-up");
                image.classList.add("fade-in");

                setTimeout(() => {
                    textContent.classList.remove("fade-in", "slide-up");
                    image.classList.remove("fade-in");
                }, 500);
            }, 300);
        }

        document.getElementById("next").addEventListener("click", () => {
            currentSlide = (currentSlide + 1) % slides.length;
            updateSlide();
        });

        document.getElementById("prev").addEventListener("click", () => {
            currentSlide = (currentSlide - 1 + slides.length) % slides.length;
            updateSlide();
        });

        updateSlide();
    });

</script>