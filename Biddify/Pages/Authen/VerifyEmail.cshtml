@page "/Verifyemail"
@model Biddify.Pages.Authen.VerifyEmailModel
@{
    ViewData["Title"] = "Verify Email";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="items-center container mx-auto mt-5">
    <div class="min-h-full flex-col justify-center px-6 py-12 lg:px-8 rounded-lg " style="background-color: #12173d;">
        <h2 class="text-center text-2xl font-bold text-white mb-6">Verify Email</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success mb-4">
                @TempData["SuccessMessage"]
            </div>
            <a asp-page="/Authen/Login" class="btn btn-success w-full p-2">Back to login</a>
        }
        else
        {
            <form method="post" class="space-y-6 w-1/3 mx-auto">
                <div>
                    <label asp-for="VerifyEmailViewModel.Email" class="block text-sm font-medium" style="color: #9395a7;"></label>
                    <input asp-for="VerifyEmailViewModel.Email" placeholder="Enter your email"
                           class="mt-2 block w-full rounded-md bg-white px-3 py-2 text-base text-gray-900 outline outline-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:outline-indigo-600" />
                    <span asp-validation-for="VerifyEmailViewModel.Email" class="text-sm text-red-500"></span>
                </div>

                <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm"></div>

                <div>
                    <input type="submit" value="Verify Email"
                           class="w-full rounded-md px-4 py-2 text-white text-sm font-semibold hover:bg-indigo-500 focus:outline-2 focus:outline-offset-2 focus:outline-indigo-600"
                           style="background-color: #4f46e5;" />
                </div>
            </form>

            <p class="text-center mt-4">
                <a asp-page="/Authen/Login" class="font-semibold hover:text-indigo-400" style="color: #4f46e5;">Back to login</a>
            </p>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
