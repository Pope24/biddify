@page
@model Biddify.Pages.Authen.RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Pages/Shared/_AuthenLayout.cshtml";
}
<div class="container">
    <div>
        <h2>Register</h2>
        <form method="post">
            <div class="mb-3">
                <label asp-for="RegisterViewModel.Name" class="form-label"></label>
                <input asp-for="RegisterViewModel.Name" class="form-control" />
                <span asp-validation-for="RegisterViewModel.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="RegisterViewModel.Email" class="form-label"></label>
                <input asp-for="RegisterViewModel.Email" class="form-control" />
                <span asp-validation-for="RegisterViewModel.Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="RegisterViewModel.Password" class="form-label"></label>
                <input asp-for="RegisterViewModel.Password" class="form-control" />
                <span asp-validation-for="RegisterViewModel.Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="RegisterViewModel.ConfirmPassword" class="form-label"></label>
                <input asp-for="RegisterViewModel.ConfirmPassword" class="form-control" />
                <span asp-validation-for="RegisterViewModel.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-check mb-3">
                <label class="form-check-label">
                    <input asp-for="RegisterViewModel.IsSeller" class="form-check-input" />
                    @Html.DisplayNameFor(m => m.RegisterViewModel.IsSeller)
                </label>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="submit" value="Register" class="btn btn-success w-100 p-2" />
            <a asp-page="/Authen/Login" class="text-decoration-none mt-3">Already have an account ?</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
