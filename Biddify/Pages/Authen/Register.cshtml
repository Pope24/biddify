@page "/Register"
@model Biddify.Pages.Authen.RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Pages/Shared/_AuthenLayout.cshtml";
}

<div class="w-full max-w-md mx-auto">
    <div class="bg-white rounded-lg shadow-xl overflow-hidden transition-all duration-300 hover:shadow-2xl">
        <!-- Form Section -->
        <div class="p-8">
            <h2 class="text-2xl font-bold text-center text-gray-800 mb-8">Create your account</h2>
            
            <form method="post" class="space-y-6">
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="p-4 rounded-lg bg-red-50 border-l-4 border-red-500 transition-all duration-300 ease-out opacity-0 transform -translate-y-2" 
                         id="error-box">
                        <div class="flex">
                            <div class="flex-shrink-0">
                                <i class="bi bi-exclamation-circle text-red-400"></i>
                            </div>
                            <div class="ml-3">
                                <div asp-validation-summary="All" class="text-sm text-red-600"></div>
                            </div>
                        </div>
                    </div>
                }

                <!-- Name Field -->
                <div class="relative">
                    <label asp-for="RegisterViewModel.Name" class="block text-sm font-medium text-gray-700 mb-1">
                        Full Name
                    </label>
                    <div class="relative">
                        <input asp-for="RegisterViewModel.Name" 
                               class="pl-10 block w-full rounded-lg border border-gray-300 bg-gray-50 focus:ring-2 focus:ring-blue-500 focus:border-transparent hover:border-blue-300 hover:bg-white transition-all duration-200"
                               placeholder="Enter your full name" />
                        <div class="absolute left-0 inset-y-0 pl-3 flex items-center pointer-events-none text-gray-400 transition-colors duration-200">
                            <i class="bi bi-person"></i>
                        </div>
                    </div>
                    <span asp-validation-for="RegisterViewModel.Name" class="mt-1 text-sm text-red-600 block"></span>
                </div>

                <!-- Email Field -->
                <div class="relative">
                    <label asp-for="RegisterViewModel.Email" class="block text-sm font-medium text-gray-700 mb-1">
                        Email Address
                    </label>
                    <div class="relative">
                        <input asp-for="RegisterViewModel.Email" 
                               class="pl-10 block w-full rounded-lg border border-gray-300 bg-gray-50 focus:ring-2 focus:ring-blue-500 focus:border-transparent hover:border-blue-300 hover:bg-white transition-all duration-200"
                               placeholder="Enter your email" />
                        <div class="absolute left-0 inset-y-0 pl-3 flex items-center pointer-events-none text-gray-400 transition-colors duration-200">
                            <i class="bi bi-envelope"></i>
                        </div>
                    </div>
                    <span asp-validation-for="RegisterViewModel.Email" class="mt-1 text-sm text-red-600 block"></span>
                </div>

                <!-- Password Field -->
                <div class="relative">
                    <label asp-for="RegisterViewModel.Password" class="block text-sm font-medium text-gray-700 mb-1">
                        Password
                    </label>
                    <div class="relative">
                        <input asp-for="RegisterViewModel.Password" 
                               type="password"
                               class="pl-10 block w-full rounded-lg border border-gray-300 bg-gray-50 focus:ring-2 focus:ring-blue-500 focus:border-transparent hover:border-blue-300 hover:bg-white transition-all duration-200"
                               placeholder="Create a password" />
                        <div class="absolute left-0 inset-y-0 pl-3 flex items-center pointer-events-none text-gray-400 transition-colors duration-200">
                            <i class="bi bi-lock"></i>
                        </div>
                    </div>
                    <span asp-validation-for="RegisterViewModel.Password" class="mt-1 text-sm text-red-600 block"></span>
                </div>

                <!-- Confirm Password Field -->
                <div class="relative">
                    <label asp-for="RegisterViewModel.ConfirmPassword" class="block text-sm font-medium text-gray-700 mb-1">
                        Confirm Password
                    </label>
                    <div class="relative">
                        <input asp-for="RegisterViewModel.ConfirmPassword" 
                               type="password"
                               class="pl-10 block w-full rounded-lg border border-gray-300 bg-gray-50 focus:ring-2 focus:ring-blue-500 focus:border-transparent hover:border-blue-300 hover:bg-white transition-all duration-200"
                               placeholder="Confirm your password" />
                        <div class="absolute left-0 inset-y-0 pl-3 flex items-center pointer-events-none text-gray-400 transition-colors duration-200">
                            <i class="bi bi-shield-lock"></i>
                        </div>
                    </div>
                    <span asp-validation-for="RegisterViewModel.ConfirmPassword" class="mt-1 text-sm text-red-600 block"></span>
                </div>

                <!-- Is Seller Checkbox -->
                <div class="flex items-center">
                    <input asp-for="RegisterViewModel.IsSeller" 
                           type="checkbox"
                           class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded transition-all duration-200 cursor-pointer" />
                    <label asp-for="RegisterViewModel.IsSeller" class="ml-2 block text-sm text-gray-700 cursor-pointer select-none">
                        Are you a seller?
                    </label>
                </div>

                <!-- Submit Button -->
                <div>
                    <button type="submit" 
                            class="w-full flex justify-center py-3 px-4 border border-transparent rounded-lg text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200 transform hover:scale-[1.02]">
                        <i class="bi bi-person-plus mr-2"></i>
                        Create Account
                    </button>
                </div>
            </form>
        </div>

        <!-- Sign In Link -->
        <div class="px-8 py-6 bg-gray-50 border-t border-gray-100">
            <p class="text-sm text-center text-gray-600">
                Already have an account?
                <a href="/Login" class="font-medium text-blue-600 hover:text-blue-700 transition-colors duration-200">
                    Sign in here
                </a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Add smooth appearance for error box
        document.addEventListener('DOMContentLoaded', function() {
            const errorBox = document.getElementById('error-box');
            if (errorBox) {
                // Force a reflow
                errorBox.offsetHeight;
                
                errorBox.classList.remove('opacity-0', '-translate-y-2');
                errorBox.classList.add('opacity-100', 'translate-y-0');
            }
        });
    </script>
}
